<p id="notice"><%= notice %></p>

<h1>Waters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Unit</th>
      <th>Amount</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waters.each do |water| %>
      <tr>
        <td><%= water.title %></td>
        <td><%= water.unit %></td>
        <td><%= water.amount %></td>
        <td><%= water.time %></td>
        <td><%= link_to 'Show', water %></td>
        <td><%= link_to 'Edit', edit_water_path(water) %></td>
        <td><%= link_to 'Destroy', water, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

